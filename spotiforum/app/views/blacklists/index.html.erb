<p id="notice"><%= notice %></p>

<h1 style="font-size: 30px; margin-left: -40px">Utenti bannati</h1>

<div class="user-table">
<table>
  <thead>
    <tr>
      <th>Email utente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blacklists.each do |blacklist| %>
      <tr>
        <td><%= blacklist.email %></td>
        <td><%= link_to 'Riammetti utente', blacklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

