<p id="notice"><%= notice %></p>

<h1>Warns</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Administrator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warns.each do |warn| %>
      <tr>
        <% user = User.all.find(warn.user_id) %>
        <% admin = User.all.find(warn.administrator_id) %>
        <td><%= user.name %></td>
        <td><%= admin.name %></td>
        <td><%= link_to 'Show', warn %></td>
        <td><%= link_to 'Edit', edit_warn_path(warn) %></td>
        <td><%= link_to 'Rimuovi ammonizione', destroy_warn_path(id: warn.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Warn', new_warn_path %>
